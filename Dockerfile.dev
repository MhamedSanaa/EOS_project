# Build Stage
ARG NODE_VERSION=20.9.0

FROM node:${NODE_VERSION}-alpine as build

ENV PUBLIC_URL=/
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

# Nginx webserver Stage
FROM nginx:stable-alpine
COPY --from=build /app/build /usr/share/nginx/html
COPY nginx.conf /etc/nginx/nginx.conf
EXPOSE 80
EXPOSE 443
