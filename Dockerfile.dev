# Use official PostgreSQL base image
FROM postgres:14

# Set environment variables for the database
ENV POSTGRES_USER=azerty
ENV POSTGRES_PASSWORD=azerty
ENV POSTGRES_DB=azerty

# Copy seed file to the Docker image
COPY ./ecomm.sql /docker-entrypoint-initdb.d/init.sql

# Install `pgcrypto` extension after PostgreSQL is up
RUN echo "CREATE EXTENSION IF NOT EXISTS pgcrypto;" > /docker-entrypoint-initdb.d/01_pgcrypto.sql

# Expose PostgreSQL port
EXPOSE 5432